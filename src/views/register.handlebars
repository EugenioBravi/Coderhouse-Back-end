<h1>Register</h1>

<form action="http://localhost:8080/api/users/" method="post">

  <div>
    <label for="firstName">First Name:</label>
    <br />
    <input
      required
      name="firstName"
      id="firstName"
      type="text"
      placeholder=""
    />
  </div>
  <br />
  <div>
    <label for="lastName">Last Name:</label>
    <br />
    <input required name="lastName" id="lastName" type="text" placeholder="" />
  </div>
  <br />
  <div>
    <label for="email">Email:</label>
    <br />
    <input
      required
      name="email"
      id="email"
      type="text"
      placeholder="user@email.com"
    />
  </div>
  <br />
  <div>
    <label for="password">Password:</label>
    <br />
    <input
      required
      name="password"
      id="password"
      type="password"
      placeholder=""
    />
  </div>
  <br />
  <div>
    <button id="register">Register</button>
  </div>
</form>